<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JibliAgent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--alert dialog-->

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <!--
                <item name="android:background">@drawable/top_corner_white_bg</item>
        -->
    </style>


    <!--Edittext-->
    <style name="CustomEditRegularStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="EditOTPStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_width">@dimen/otp_et_width</item>
        <item name="android:layout_height">@dimen/otp_et_height</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:background">@drawable/otp_selector</item>
    </style>

    <!--Custom button-->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/button_padding_lr</item>
        <item name="android:paddingRight">@dimen/button_padding_lr</item>
        <item name="android:paddingTop">@dimen/button_padding_tb</item>
        <item name="android:paddingBottom">@dimen/button_padding_tb</item>
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomPrimaryButton" parent="CustomButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/blue_bt_bg</item>
    </style>

    <style name="CustomSecondaryButton" parent="CustomButtonStyle">
        <item name="android:background">@drawable/round_corner_white_bg</item>
    </style>

    <style name="CustomYellowButton" parent="CustomButtonStyle">
        <item name="android:background">@drawable/yellow_bt_bg</item>
    </style>
    <style name="CustomRegularTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/default_text</item>
    </style>

    <style name="CustomRegularDarkTextView" parent="CustomRegularTextView">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CustomRegularLightTextView" parent="CustomRegularTextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CustomRegularPrimaryTextView" parent="CustomRegularTextView">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CustomSmallTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/default_small_text</item>
    </style>

    <style name="CustomSmallDarkTextView" parent="CustomSmallTextView">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CustomSmallLightTextView" parent="CustomSmallTextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CustomExtraSmallTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/default_extra_small_text</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CustomMediumTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/default_medium_small_text</item>
    </style>

    <style name="CustomMediumLightTextView" parent="CustomMediumTextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CustomMediumDarkTextView" parent="CustomMediumTextView">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CustomMediumRedTextView" parent="CustomMediumTextView">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="CustomMediumBoldTextView" parent="CustomMediumTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CustomLargeTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/default_large_text</item>
    </style>

    <style name="CustomLargeDarkTextView" parent="CustomLargeTextView">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AlertDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_up</item>
        <item name="android:windowExitAnimation">@anim/scale_down</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/default_small_text</item>
        <item name="android:background">@drawable/switch_toggle_bg</item>
        <item name="android:textColor">@drawable/switch_text_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SwitchSmallButton" parent="SwitchButtonStyle">
        <item name="android:paddingTop">@dimen/padding_x_small</item>
        <item name="android:paddingBottom">@dimen/padding_x_small</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
    </style>

    <style name="SwitchButtonBlueStyle">
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/default_small_text</item>
        <item name="android:background">@drawable/switch_toggle_blue_bg</item>
        <item name="android:textColor">@drawable/switch_text_white_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

</resources>